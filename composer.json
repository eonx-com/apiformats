{
  "name": "eonx-com/apiformats",
  "description": "Package for working with API requests and responses in different formats",
  "keywords": [
    "api",
    "formats",
    "eoneopay"
  ],
  "license": "BSD-3-Clause",
  "type": "package",
  "require": {
    "php": ">=7.1",
    "doctrine/inflector": "^2.0",
    "eonx-com/utils": "^1.0 || ^2.0",
    "ext-json": "*",
    "laminas/laminas-diactoros": "^2.1",
    "league/fractal": "^0.17.0 || ^0.19",
    "symfony/psr-http-message-bridge": "^1.0",
    "woohoolabs/yang": "^1.4"
  },
  "require-dev": {
    "eonx-com/standards": "^0.3",
    "illuminate/http": "^5.8 || ^6.0",
    "illuminate/support": "^5.8 || ^6.0",
    "laravel/lumen-framework": "^5.8 || ^6.0",
    "phpmd/phpmd": "2.6.*",
    "phpstan/phpstan": "^0.11",
    "phpstan/phpstan-phpunit": "^0.11",
    "phpstan/phpstan-strict-rules": "^0.11",
    "phpunit/phpunit": "^8.5",
    "roave/security-advisories": "dev-master",
    "sebastian/phpcpd": "^4.0",
    "squizlabs/php_codesniffer": "^3.0",
    "vlucas/phpdotenv": "^3.0"
  },
  "replace": {
    "eoneopay/apiformats": "*"
  },
  "suggest": {
    "illuminate/http": "To use the Laravel implementation",
    "illuminate/support": "To use Laravel service provider"
  },
  "autoload": {
    "psr-4": {
      "EoneoPay\\ApiFormats\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\EoneoPay\\ApiFormats\\": "tests/"
    }
  },
  "provide": {
    "php-http/client-implementation": "1.0"
  },
  "optimize-autoloader": true,
  "minimum-stability": "stable",
  "prefer-stable": true
}
